@inject appEvaluaciones.Shared.Services.IAuthService Auth
@inject NavigationManager Nav

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <a class="navbar-brand" href="">appEvaluaciones</a>
        <div class="text-end">
            @if (Auth.Current.IsAuthenticated)
            {
                <span class="me-2 small">@($"Usuario: {Auth.Current.Username} ({Auth.Current.Role})")</span>
                <a class="btn btn-sm btn-outline-light" href="/logout">Salir</a>
            }
            else
            {
                <NavLink class="btn btn-sm btn-outline-light" href="login">Login</NavLink>
            }
        </div>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        @if (Auth.Current.IsAuthenticated)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
                </NavLink>
            </div>

            <div class="nav-item px-3 mt-2">
                <NavLink class="nav-link" href="evaluacion">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Evaluación
                </NavLink>
            </div>

            <div class="nav-item px-3 mt-3">
                <button class="nav-link btn btn-link text-decoration-none px-0" @onclick:stopPropagation="true" @onclick="ToggleCatalogos" aria-expanded="@catalogosOpen" type="button">
                    <span aria-hidden="true">@(catalogosOpen ? "▼" : "►")</span> Catálogos
                </button>
            </div>
            @if (catalogosOpen && string.Equals(Auth.Current.Role, "Admin", StringComparison.OrdinalIgnoreCase))
            {
                <div class="nav-item px-4">
                    <NavLink class="nav-link" href="tiendas">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Tiendas
                    </NavLink>
                </div>
                <div class="nav-item px-4">
                    <NavLink class="nav-link" href="empresas">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Empresas
                    </NavLink>
                </div>
                <div class="nav-item px-4">
                    <NavLink class="nav-link" href="categorias">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Categorías
                    </NavLink>
                </div>
                <div class="nav-item px-4">
                    <NavLink class="nav-link" href="preguntas">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Preguntas
                    </NavLink>
                </div>
                <div class="nav-item px-4">
                    <NavLink class="nav-link" href="gerentes">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Gerentes
                    </NavLink>
                </div>
                <div class="nav-item px-4">
                    <NavLink class="nav-link" href="evaluadores">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Evaluadores
                    </NavLink>
                </div>
            }
        }
    </nav>
</div>

@code {
    private bool catalogosOpen = false;
    private void ToggleCatalogos() => catalogosOpen = !catalogosOpen;

    // Logout se maneja via endpoint /logout
}
