@page "/categorias"
@inject ICategoriasService CategoriasService
@inject NavigationManager Nav
@inject IJSRuntime JS

<PageTitle>Categorías</PageTitle>

<h1>Categorías</h1>

<div class="mb-3">
    <button class="btn btn-primary" @onclick="Nueva">Nueva categoría</button>
    <button class="btn btn-secondary ms-2" @onclick="Reload">Refrescar</button>
  </div>

@if (loading)
{
    <p>Cargando...</p>
}
else if (error is not null)
{
    <div class="alert alert-danger">@error</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Código</th>
                <th>Descripción</th>
                <th>Ponderación</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var c in items)
        {
            <tr>
                <td>@c.CategoriaId</td>
                <td>@c.Codigo</td>
                <td>@c.Descripcion</td>
                <td>@c.Ponderacion</td>
                <td>
                    <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => Editar(c.CategoriaId)">Editar</button>
                    <button class="btn btn-sm btn-outline-danger" @onclick="() => Eliminar(c.CategoriaId)">Eliminar</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private List<Categoria> items = new();
    private bool loading = true;
    private string? error;

    protected override async Task OnInitializedAsync()
    {
        await Load();
    }

    private async Task Load()
    {
        try
        {
            loading = true;
            error = null;
            items = (await CategoriasService.GetAllAsync()).ToList();
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            loading = false;
        }
    }

    private void Nueva() => Nav.NavigateTo("/categorias/new");
    private void Editar(int id) => Nav.NavigateTo($"/categorias/{id}");
    private async Task Eliminar(int id)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"¿Eliminar categoría {id} definitivamente?"))
        {
            await CategoriasService.DeleteAsync(id);
            await Load();
            StateHasChanged();
        }
    }

    private Task Reload() => Load();
}

