@page "/evaluadores"
@inject IEvaluadoresService EvaluadoresService
@inject NavigationManager Nav
@inject IJSRuntime JS

<PageTitle>Evaluadores</PageTitle>

<h1>Evaluadores</h1>

<div class="mb-3">
    <button class="btn btn-primary" @onclick="Nuevo">Nuevo evaluador</button>
    <button class="btn btn-secondary ms-2" @onclick="Reload">Refrescar</button>
  </div>

@if (loading)
{
    <p>Cargando...</p>
}
else if (error is not null)
{
    <div class="alert alert-danger">@error</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Código</th>
                <th>Nombre</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var e in items)
        {
            <tr>
                <td>@e.EvaluadorId</td>
                <td>@e.Codigo</td>
                <td>@e.Nombre</td>
                <td>
                    <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => Editar(e.EvaluadorId)">Editar</button>
                    <button class="btn btn-sm btn-outline-danger" @onclick="() => Eliminar(e.EvaluadorId)">Eliminar</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private List<Evaluador> items = new();
    private bool loading = true;
    private string? error;

    protected override async Task OnInitializedAsync()
    {
        await Load();
    }

    private async Task Load()
    {
        try
        {
            loading = true;
            error = null;
            items = (await EvaluadoresService.GetAllAsync()).ToList();
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            loading = false;
        }
    }

    private void Nuevo() => Nav.NavigateTo("/evaluadores/new");
    private void Editar(int id) => Nav.NavigateTo($"/evaluadores/{id}");
    private async Task Eliminar(int id)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"¿Eliminar evaluador {id} definitivamente?"))
        {
            await EvaluadoresService.DeleteAsync(id);
            await Load();
            StateHasChanged();
        }
    }

    private Task Reload() => Load();
}

